---
import { contentfulClient } from '../lib/contentful';

const [heroRes, skillsRes, projectsRes] = await Promise.all([
  contentfulClient.getEntries({ content_type: 'hero' }),
  contentfulClient.getEntries({ content_type: 'skill', limit: 6 }),
  contentfulClient.getEntries({ content_type: 'project', limit: 3 })
]);

const hero = heroRes.items[0]?.fields;
const skills = skillsRes.items.map(item => item.fields);
const projects = projectsRes.items.map(item => item.fields);
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>{hero?.title || 'Portfolio'}</title>
  <style>
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body { font-family: -apple-system, BlinkMacSystemFont, sans-serif; line-height: 1.6; color: #333; }
    .container { max-width: 1200px; margin: 0 auto; padding: 2rem; }
    h1 { font-size: clamp(2rem, 5vw, 4rem); background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); -webkit-background-clip: text; -webkit-text-fill-color: transparent; }
    .hero { text-align: center; padding: 4rem 0; }
    .cta { display: inline-block; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: white; padding: 1rem 2rem; text-decoration: none; border-radius: 50px; font-weight: 600; margin-top: 2rem; }
    .section { padding: 4rem 0; }
    .grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 2rem; }
    .skill { background: #f8f9ff; padding: 1.5rem; border-radius: 12px; border-left: 4px solid #667eea; }
    .skill-bar { background: #e0e7ff; height: 8px; border-radius: 4px; overflow: hidden; margin-top: 0.5rem; }
    .skill-fill { background: linear-gradient(90deg, #667eea, #764ba2); height: 100%; transition: width 0.3s; }
    .project { background: white; padding: 2rem; border-radius: 16px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); transition: transform 0.3s; }
    .project:hover { transform: translateY(-5px); }
    .tech { background: #f0f9ff; padding: 0.25rem 0.75rem; border-radius: 20px; font-size: 0.875rem; color: #0369a1; }
  </style>
</head>
<body>
  <div class="container">
    <!-- Hero -->
    <section class="hero">
      <h1>{hero?.title}</h1>
      <p style="font-size: 1.25rem; color: #666; margin: 1rem 0 2rem;">{hero?.subtitle}</p>
      <a href={hero?.ctaUrl} class="cta">{hero?.ctaLabel}</a>
    </section>

    <!-- Skills -->
    <section class="section">
      <h2 style="font-size: 2.5rem; text-align: center; margin-bottom: 3rem; color: #333;">Skills</h2>
      <div class="grid">
        {skills.map(skill => (
          <div class="skill" key={skill.name}>
            <div style="display: flex; justify-content: space-between; align-items: center;">
              <strong>{skill.name} <span style="color: #666; font-size: 0.9rem;">({skill.category})</span></strong>
              <span>{skill.level}%</span>
            </div>
            <div class="skill-bar" style="width: 100%;">
              <div class="skill-fill" style={`width: ${skill.level}%`}></div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Projects -->
    <section class="section">
      <h2 style="font-size: 2.5rem; text-align: center; margin-bottom: 3rem; color: #333;">Proyectos destacados</h2>
      <div class="grid">
        {projects.map(project => (
          <div class="project">
            <h3>{project.title}</h3>
            <p>{project.shortDescription}</p>
            <div style="margin: 1rem 0;">
              {project.tech?.split(',').map(t => (
                <span class="tech" key={t.trim()}>{t.trim()}</span>
              ))}
            </div>
            <div style="margin-top: 1.5rem;">
              {project.repoUrl && <a href={project.repoUrl} style="background: #24292e; color: white; padding: 0.5rem 1rem; text-decoration: none; border-radius: 6px; margin-right: 1rem;">CÃ³digo</a>}
              {project.demoUrl && <a href={project.demoUrl} style="background: #10b981; color: white; padding: 0.5rem 1rem; text-decoration: none; border-radius: 6px;">Demo</a>}
            </div>
          </div>
        ))}
      </div>
    </section>
  </div>
</body>
</html>
