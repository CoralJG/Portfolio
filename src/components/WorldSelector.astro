<section id="worlds" class="world-selector reveal">
  <div class="container">
    <h2 class="section-title">World Selector</h2>
    <div class="world-grid">
      <div class="world-card" data-world="Hardcore" tabindex="0">
        <div class="world-thumbnail" style="background-image: url('/images/minecraft.jpg');" alt="Cybersecurity"></div>
        <h3 class="world-name">Cybersecurity</h3>
        <span class="world-difficulty">Hardcore</span>
      </div>
      <div class="world-card" data-world="Survival" tabindex="0">
        <div class="world-thumbnail" style="background-image: url('/images/minecraft.jpg');" alt="Fullstack"></div>
        <h3 class="world-name">Fullstack</h3>
        <span class="world-difficulty">Survival</span>
      </div>
    </div>
  </div>
</section>